}

.waited-rating {
	position: relative;
	text-align: center;
	padding-bottom:25px;
	font-size 0.8em
}
.waited-rating .callout {
	display: block;
	position: absolute;
	top:0;
	border: 2px solid transparent;
	height:32vw;
	width:50%;
	z-index: 30;
	text-align: center;
}

.waited-rating .callout-padding {
	position: relative; 
    height: 100%; 
    width: 100%;  
    border-top: 6px solid transparent;
    border-bottom: 6px solid transparent;
}
.waited-rating .callout.food-line {
	left:0;
}
.waited-rating .callout.service-line {
	right:0;
}

.waited-rating .callout.food-line .top {
	left:0;
}
.waited-rating .callout.service-line .top {
	right:0;
}


.waited-rating .callout .top {
	position: relative;
	display: block;
}
.waited-rating .callout label {
	position: absolute;
	display: block;
	height:100px;
	left:0;
	width:100%;
	text-align: center;
	text-transform: uppercase;
	font-size: 1em;
	font-weight: 400;
	color: #FFF;
}
.waited-rating .callout.food-line label {
	padding-right:12vw;
}
.waited-rating .callout.service-line label {
	padding-left:12vw;
}
.waited-rating .callout .bottom {
	position: relative;
	display: block;
	border-top: 1px solid #9b2d22;
	padding-top 1px
}
.waited-rating .callout .top-label {
	top:-18px;
	font-size:0.9em;
	font-weight: 300;
}
.waited-rating .callout.secondary-border .bottom {
	border-color:$colorPrimary;
}




.waited-rating .outer-circle {
	position: relative;
	display: inline-block;
	width: 32vw;
    height: 32vw; 
    border-radius: 32vw; 
    border: 2px solid #FFF;
    overflow: hidden;
    z-index: 30;
}

.waited-rating .outer-circle-bg {
	opacity: 0.25;
}

.waited-rating .inner-circle {
	position: relative; 
    height: 26vw; 
    width: 26vw;  
    border-radius: 26vw;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	overflow: hidden;
	background-color: transparent;
}

.waited-rating .padding-inner-circle {
	position: relative; 
    height: 100%; 
    width: 100%;  
    border-radius: 100%;
    overflow: hidden;
    border: 6px solid transparent;
    z-index: 20;

}

.waited-rating .padding-inner-circle .filler {
	position: absolute;
	bottom: 0;
	left:0;
	width:100%;
	-webkit-transition: height .1s linear; 
	transition: height .1s linear; 
	box-shadow: 0 0 1px rgba(0, 0, 0, 0.05); //Fixes artifact issue on iOS
}

.waited-rating .padding-inner-circle .filler-secondary {
	position: absolute;
	bottom: 0;
	left:0;
	width:100%;
	-webkit-transition: height .1s linear; 
	transition: height .1s linear; 
	box-shadow: 0 0 1px rgba(0, 0, 0, 0.05); //Fixes artifact issue on iOS
}


