//STATUS BAR
.fui-status-bar
		position absolute
		top 0
		display block
		width 100%
		height $statusBarHeight
		background-color $statusBarBackgroundColor
		-webkit-transition background-color 0.3s ease
		transition background-color 0.3s ease
		display none //hiding this for now since it makes it easier for cross ios/android dev

//CONTAINER
.fui-container
	margin-top $statusBarHeight
	margin 0 //hiding this for now since it makes it easier for cross ios/android dev
	position absolute
	top 0 
	right 0
	bottom 0
	left 0
	background-color #FFF
	z-index 6


//LINKS
a
	text-decoration none
	color inherit
	



//TEXT
h1, h2, h3, h4, h5, h6
	padding-bottom $verticalSpacing

h1
	font-size 1.8em
h2
	font-size 1.2em
h3
	font-size 1.1em
h4
	font-size 1em
h5
	font-size 0.9em
h6
	font-size 0.8em
	
p
	padding-bottom $verticalSpacing
	
	&.fui-small
		font-size $fontSize * $smallMultiplier
		
	&.fui-large
		font-size $fontSize * $largeMultiplier

.fui-text-center
	text-align center !important
	
.fui-text-left
	text-align left !important
	
.fui-text-right
	text-align right !important



//Utility
.fui-no-flicker
	-webkit-backface-visibility hidden
	backface-visibility hidden
	-webkit-perspective 1000
	perspective 1000
	-webkit-transform-style preserve-3d

//Add the drop shadow 

// .fui-content
