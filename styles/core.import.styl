//PILLS

.fui-pill
	border-radius(20px)
	background-color $colorDarkPrimary
	color $colorTextLight
	width auto
	display inline-block
	padding 10px 15px 12px 15px
	font-size 0.8em
		

//Tabs
.fui-tabs
	display -webkit-flex
	display flex
	-webkit-justify-content space-around
	justify-content space-around
	align-items center
	-webkit-align-items center
	width 100%
	height $tabsHeight
	background-color $tabsBackgroundColor
	color $tabsColor
	border-top $tabsBorderColor $tabsBorderWidth $tabsBorderStyle
	overflow hidden
	
	a
		flex 1
		-webkit-flex 1
		flex-grow 1
		-webkit-flex-grow 1
		color $tabsColor
		height 100%
		display -webkit-flex
		display flex
		align-items center
		-webkit-align-items center
		justify-content center
		-webkit-justify-content center
		flex-direction column
		-webkit-flex-direction column
		font-size 0.7em
		line-height 0.5em
		text-align center
	
	a i
		display block
		font-size 2.7em
		text-align center
		line-height 1em
		margin-top -5px
	
	a.fui-active, a:active
		color $tabsActiveColor
		
	a:last-child
		border-right 0
		
.fui-tabs-divider a
	border-right $tabsDividerWidth $tabsDividerStyle $tabsDividerColor
	

.fui-tabs-fixed
	position absolute
	bottom 0
	left 0
	z-index 7
	
.fui-tabs-indicators
	height $tabsHeight * 1.3
	
	a
		font-size 0.9em
		padding-top 8px
		color $colorGreyMedium
		
		i
			margin-top 0
			padding-top 5px
			font-size 2em
			visibility hidden

//ELEMENTS

.fui-slideDown .fui-element
	// -webkit-box-shadow 0px 0px 20px 0px rgba(0,0,0,0.1)
	// box-shadow 0px 0px 20px 0px rgba(0,0,0,0.1)
	padding-top $headerHeight
	overflow-x hidden
	overflow-y scroll
	-webkit-overflow-scrolling touch

.fui-modal .fui-element
	z-index 6 //Popups should be on top of headers
	// -webkit-box-shadow 0px 0px 20px 0px rgba(0,0,0,0.1)
	// box-shadow 0px 0px 20px 0px rgba(0,0,0,0.1)
	overflow hidden
	border-radius($borderRadius)
	

.fui-modal.fui-element-in .fui-overlay
	z-index 6 //Popups should be on top of headers
	-webkit-animation fui-fade-modal-in 0.35s 0s cubic-bezier(0.215, 0.610, 0.355, 1.000) both
	animation fui-fade-modal-in 0.35s 0s cubic-bezier(0.215, 0.610, 0.355, 1.000) both
	background-color $overlayBackgroundColor

@keyframes fui-fade-modal-in 
	from  
		opacity 0
	to
		opacity $overlayOpacity


.fui-modal.fui-element-out .fui-overlay
	display block
	-webkit-animation fui-fade-out 0.35s 0s cubic-bezier(0.215, 0.610, 0.355, 1.000) both
	animation fui-fade-out 0.35s 0s cubic-bezier(0.215, 0.610, 0.355, 1.000) both
	

@keyframes fui-fade-out
	from
		opacity $overlayOpacity
	to
		opacity 0


		



