// 	box-shadow 0px 0px 10px 0px rgba(0,0,0,0.1)

//Buttons
.nt-button
	position relative
	display inline-block
	padding-top $buttonPaddingVertical - 1px
	padding-bottom $buttonPaddingVertical + 1px
	padding-left $buttonPaddingHorizontal
	padding-right $buttonPaddingHorizontal
	margin-top $verticalSpacing
	margin-bottom $verticalSpacing 
	border-width $buttonBorderWidth
	border-color $buttonBorderColor
	border-style $buttonBorderStyle
	vertical-align middle
	border-radius($borderRadius)
	
	&.nt-large
		font-size $fontSize * $largeMultiplier
		padding-top $buttonPaddingVertical * $largeMultiplier - 1px
		padding-bottom $buttonPaddingVertical * $largeMultiplier + 1px
	
	&.nt-small
		font-size $fontSize * $smallMultiplier
		padding-top $buttonPaddingVertical * $smallMultiplier - 1px
		padding-bottom $buttonPaddingVertical * $smallMultiplier + 1px

	&.nt-block
		display block
		width 100%
	
	&.nt-solid
		background-color $buttonBackgroundColor
		color $buttonColor
		border none

	&:active	
		border-color darken($buttonBorderColor, 30%)
		
	&.nt-solid:active
		background-color darken($buttonBackgroundColor, 30%)
		


//PADDING
.nt-padding 
	padding $padding
	
	&.nt-small
		padding-top $padding * $smallMultiplier
		padding-bottom $padding * $smallMultiplier
	
	&.nt-large
		padding-top $padding * $largeMultiplier
		padding-bottom $padding * $largeMultiplier


//BORDERS

.nt-border
	border 1px solid $colorBorder
	
.nt-border-top
	border-top 1px solid $colorBorder
	
.nt-border-right
	border-right 1px solid $colorBorder

.nt-border-bottom
	border-bottom 1px solid $colorBorder
	
.nt-border-left
	border-left 1px solid $colorBorder


//HEADER
.nt-header
	position absolute
	top 0
	width 100%
	height $headerHeight
	background-color $headerBackgroundColor
	color $headerColor
	z-index 5
	overflow hidden
	
	h1 
		display block
		width 75%
		margin 0 auto
		text-align center
		line-height $headerHeight - 2px
		font-size 1em
		white-space nowrap
		overflow hidden
		text-overflow ellipsis

	.nt-button 
		position absolute
		left 0
		top 0
		width 15%
		height 100%
		line-height $headerHeight - 6px
		padding 0
		margin 0
		border none
		text-align center
			
		i
			// position absolute
			// top 50%
			// -webkit-transform translateY(-50%)
			// transform translateY(-50%)
			// margin-top -2px
				
		&.nt-text
			font-size 0.7em
			width auto
			padding 0 10px
			margin-top 4px
			margin-right 10px
			height auto
			line-height $headerHeight - 9px
	
		&.nt-right
			right 0
			left auto
		
		&.nt-block
			top 0
			width 100%
			height 100%
			margin 0
			padding 0 $padding
			line-height $headerHeight - 2px
			border-radius(0)
			
		&:active
			background-color darken($headerBackgroundColor, 30%)
		
//SUBHEADER
.nt-subheader
	@extend .nt-header
	top $headerHeight
	height $subheaderHeight
	background-color $subheaderBackgroundColor
	color $headerColor
	padding-top 0
	z-index 2
	
	.nt-button
		&.nt-block
			line-height $subheaderHeight - 2px
			
			&.nt-icon-right i:last-child
				right 22px
	

//FOOTER
.nt-footer
	@extend .nt-header
	top auto
	bottom 0
	height $footerHeight
	background-color $footerBackgroundColor
	color $footerColor
	
	.nt-button
		&.nt-block
			line-height $footerHeight - 2px
		
		
			
//SCROLLING CONTENT
.nt-scroll
	overflow-x hidden
	overflow-y scroll
	-webkit-overflow-scrolling touch
	top $headerHeight
	right 0
	bottom 0
	left 0
	position absolute
	z-index 1
	background-color $ntScrollBackgroundColor
	
.nt-element .nt-scroll
	overflow-x hidden
	overflow-y scroll
	-webkit-overflow-scrolling touch
	top 0
	right 0
	bottom 0
	left 0
	position relative
	z-index 1

	&.nt-padding
		padding-top $padding
		



//Adjust nt-scroll for different elements
.nt-scroll.nt-no-header
	top 0
	
.nt-scroll.nt-has-subheader
	top $headerHeight + $subheaderHeight

[nt-tabs] .nt-scroll,
.nt-scroll.nt-has-tabs
	bottom $tabsHeight
	
.nt-scroll.nt-has-footer
	bottom $footerHeight
	
[nt-tabs] .nt-slideUp .nt-element
	bottom $tabsHeight
	
		

//Fixes z-index problem with scrolling items underneath in fast-ui and fast-ui-swipe
.nt-last .nt-scroll
	//overflow: hidden  //Was causing a flicker so disabled.  Doesn't seem to be a problem anymore.


//DIVIDER
.nt-divider
	background-color $dividerBackgroundColor
	color $dividerColor
	height $dividerHeight
	width 100%

//ITEM HEADER
.nt-item-header
	display block
	background-color $itemHeaderBackgroundColor
	color $itemHeaderColor
	font-size 0.9em
	padding-top $verticalSpacing * 2
	padding-bottom $verticalSpacing * 2
	padding-left $padding
	padding-right $padding
	text-align center


//ITEM
.nt-item
	position relative
	display block
	border-bottom $colorGreyLight 1px solid
	padding $padding
	font-size 90%
	
	h2
		padding-bottom 3px
		text-overflow ellipsis
		white-space nowrap
		overflow hidden
	
	h3
		font-size 0.9em
		color $colorGreyMedium
		text-overflow ellipsis
		white-space nowrap
		overflow hidden

	p
		padding-bottom $verticalSpacing
	p:last-child
		padding-bottom 0
		
	&.nt-small
		padding-top: $padding * $smallMultiplier	
		padding-bottom: $padding * $smallMultiplier	
		
	.nt-stamp
		position absolute
		top $padding
		right $padding
		color $colorGreyMedium
		font-size 0.7em


//ICONS
.nt-icon-right
	padding-right 50px
	
	i:last-child
		position absolute
		right $padding
		top 50%
		-webkit-transform translateY(-50%)
		transform translateY(-50%)
		width 15px
		text-align center
		
.nt-icon-left
	padding-left 50px
	
	i:first-child
		position absolute
		left $padding
		top 50%
		-webkit-transform translateY(-50%)
		transform translateY(-50%)
		width 15px
		text-align center
		

//AVATARS
.nt-avatar
	border-radius(2px)
	width $avatarSize
	height $avatarSize
	display inline-block
	
.nt-avatar-right
	padding-right $avatarSize + $padding + 15px
	
	.nt-avatar:last-child
		position absolute
		right $padding
		top 50%
		-webkit-transform translateY(-50%)
		transform translateY(-50%)
		
.nt-avatar-left
	padding-left $avatarSize + $padding + 15px
	
	.nt-avatar:first-child
		position absolute
		left $padding
		top 50%
		-webkit-transform translateY(-50%)
		transform translateY(-50%)
	
	h2
		paddin-top 2px
		

//RANKS
.nt-rank
	border-radius(2px)
	width $rankSize
	height $rankSize
	display inline-block
	background-color $rankBackgroundColor
	color $rankColor
	font-size $rankFontSize
	text-align center
	padding-right 0.5px
	line-height $avatarSize - 3px
	
	&.nt-small
		width $rankSize * $smallMultiplier
		height $rankSize * $smallMultiplier
		line-height $avatarSize * $smallMultiplier - 1px
		font-size $rankFontSize * $smallMultiplier
		
		i
			position relative
			display block
			top 2px
	
.nt-rank-right
	padding-right $rankSize + $padding + 15px
	
	.nt-rank:last-child
		position absolute
		right $padding
		top 50%
		-webkit-transform translateY(-50%)
		transform translateY(-50%)
		
	&.nt-small
		padding-right ($rankSize * $smallMultiplier) + $padding + 15px
		
		h2
			padding-top 2px
		
.nt-rank-left
	padding-left $rankSize + $padding + 15px
	
	.nt-rank:first-child
		position absolute
		left $padding
		top 50%
		-webkit-transform translateY(-50%)
		transform translateY(-50%)
		
	&.nt-small
		padding-left ($rankSize * $smallMultiplier) + $padding + 15px
		
		h2
			padding-top 2px


